{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "paths": {
            "@client": ["src/client"],
            "@server": ["src/server"],
            "@components": ["src/client/components"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
